<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.05</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ButtonStyleColored" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyleColorless" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:elevation">20dp</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyleBorder" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:elevation">20dp</item>
        <item name="android:background">@drawable/round_box_border</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/materialGray6</item>
        <item name="android:fontFamily">@font/productb</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/productb</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>