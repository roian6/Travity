<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BAD CODING START -->

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="107dp"
                android:layout_height="21dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/app_typo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_notification"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="@color/colorGrayBright"
                app:layout_constraintTop_toBottomOf="@id/imageView4" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center_horizontal"
                android:text="ICN"
                android:textColor="#3969ff"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView11"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_asiana"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView10"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center_horizontal"
                android:text="TPE"
                android:textColor="#3969ff"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="56dp"
                android:fontFamily="@font/notosanskr_regular"
                android:text="Terminal"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/textView15"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="Gate"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/notosanskr_regular"
                android:text="Seat"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/textView15"
                app:layout_constraintTop_toTopOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView20_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/notosanskr_bold"
                android:text="2"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/notosanskr_bold"
                android:text="D6"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />


            <TextView
                android:id="@+id/textView19_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/notosanskr_bold"
                android:text="75G"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <!-- BAD CODING END -->

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:text="이용 정보"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="end"
                android:padding="5dp"
                android:text="전체 보기"
                android:textColor="#3969ff"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_food_main3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="20dp"
                android:elevation="4dp"
                android:orientation="horizontal"
                app:cardBackgroundColor="#3969ff"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_shop_main3"
                app:layout_constraintTop_toBottomOf="@+id/textView19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_food" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_shop_main3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="20dp"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardBackgroundColor="#ffa43d"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@+id/btn_food_main3"
                app:layout_constraintRight_toLeftOf="@+id/btn_parking_main3"
                app:layout_constraintTop_toBottomOf="@+id/textView19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dutyfree" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_parking_main3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="20dp"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardBackgroundColor="#ff754a"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@+id/btn_shop_main3"
                app:layout_constraintRight_toLeftOf="@+id/btn_facility_main3"
                app:layout_constraintTop_toBottomOf="@+id/textView19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_parking" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_facility_main3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="20dp"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardBackgroundColor="#7224ff"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@id/btn_parking_main3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_info" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_food_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center_horizontal"
                android:text="식음료"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_food_main3"
                app:layout_constraintStart_toStartOf="@+id/btn_food_main3"
                app:layout_constraintTop_toBottomOf="@+id/btn_food_main3" />

            <TextView
                android:id="@+id/tv_shop_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center_horizontal"
                android:text="면세점"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_shop_main3"
                app:layout_constraintLeft_toRightOf="@id/tv_food_main1"
                app:layout_constraintRight_toLeftOf="@+id/tv_parking_main1"
                app:layout_constraintStart_toStartOf="@+id/btn_shop_main3"
                app:layout_constraintTop_toBottomOf="@+id/btn_shop_main3" />


            <TextView
                android:id="@+id/tv_parking_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center_horizontal"
                android:text="주차"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_parking_main3"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_main1"
                app:layout_constraintRight_toLeftOf="@+id/tv_info_main1"
                app:layout_constraintStart_toStartOf="@+id/btn_parking_main3"
                app:layout_constraintTop_toBottomOf="@+id/btn_parking_main3" />


            <TextView
                android:id="@+id/tv_info_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="편의 시설"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_facility_main3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/btn_facility_main3"
                app:layout_constraintTop_toBottomOf="@+id/btn_facility_main3" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:text="유용한 정보"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_food_main3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="end"
                android:padding="5dp"
                android:text="전체 보기"
                android:textColor="#3969ff"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_food_main3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/infoRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_main1_info"
                tools:orientation="horizontal">


            </androidx.recyclerview.widget.RecyclerView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
